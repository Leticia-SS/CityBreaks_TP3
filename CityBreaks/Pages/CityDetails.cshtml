@page "{name}"
@model CityBreaks.Pages.CityDetailsModel
@{
    ViewData["Title"] = "Detalhes da Cidade";
}

@if (Model.City == null)
{
    <h2 class="text-danger">Cidade não encontrada</h2>
}
else
{
    <div class="container mt-4">
        <h1>@Model.City.Name</h1>
        <h4>@Model.City.Country</h4>

        @if (Model.City.Properties != null && Model.City.Properties.Any())
        {
            <h5 class="mt-4">Propriedades disponíveis:</h5>
            <ul class="list-group">
                @foreach (var prop in Model.City.Properties)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @prop.Name
                        <span class="badge bg-primary rounded-pill">@prop.PricePerNight.ToString("C") por noite</span>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted">Nenhuma propriedade cadastrada nesta cidade.</p>
        }
    </div>
}
