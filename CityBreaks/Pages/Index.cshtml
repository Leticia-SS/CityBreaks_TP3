@page
@model CityBreaks.Pages.IndexModel
@{
    ViewData["Title"] = "Início";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Cidades</h1>

    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr class="text-center">
                <th>Cidade</th>
                <th>País</th>
                <th>Propriedades</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var city in Model.Cities)
            {
                <tr>
                    <td>@city.Name</td>
                    <td>@city.Country</td>
                    <td>
                        @if (city.Properties != null && city.Properties.Any())
                        {
                            <ul class="mb-0">
                                @foreach (var property in city.Properties)
                                {
                                    <li>@property.Name - @property.PricePerNight.ToString("C") por noite</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span class="text-muted">Nenhuma propriedade disponível</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
